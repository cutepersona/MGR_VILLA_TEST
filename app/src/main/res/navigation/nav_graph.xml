<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/splashFragment"
        android:name="fastcampus.aop.part2.mgr_villa.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <!--   BackStack제거   -->
        <action
            android:id="@+id/action_SplashFragment_to_onBoardingFragment"
            app:destination="@id/onBoardingFragment"
            />
        <action
            android:id="@+id/action_splashFragment_to_mainActivity"
            app:destination="@id/mainActivity"
            />
    </fragment>
    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="fastcampus.aop.part2.mgr_villa.OnBoardingFragment"
        android:label="fragment_on_boarding"
        tools:layout="@layout/fragment_on_boarding" >
        <action
            android:id="@+id/action_onBoardingFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="fastcampus.aop.part2.mgr_villa.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />

</navigation>