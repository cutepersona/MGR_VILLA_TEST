<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="5dp"
    >

    <TextView
        android:id="@+id/tenantTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/roomNumber"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/ContractDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ContractDate"
        android:textSize="18sp"
        android:layout_marginRight="20dp"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/LeaveDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LeaveDate"
        android:layout_marginRight="20dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ContractDate"
        />

    <View
        android:id="@+id/noticeBottomLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_margin="2dp"
        android:background="@drawable/background_underline"
        app:layout_constraintTop_toBottomOf="@+id/LeaveDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>