<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dragEdge="right"
        android:layout_marginTop="3dp"
        app:mode="same_level">


        <!--스와이프 레이아웃-->
        <LinearLayout
            android:id="@+id/tenant_UD_Slide"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tenantDelete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="20dp"
                android:src="@drawable/ic_delete" />

            <ImageView
                android:id="@+id/tenantUpdate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="20dp"
                android:src="@drawable/ic_create_write" />

        </LinearLayout>

        <!--메인 레이아웃-->
        <LinearLayout
            android:id="@+id/TenantRoomNum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:background="@drawable/important_button_shape"
            android:paddingVertical="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:orientation="vertical"
                android:layout_weight="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/tenantRoomId"
                        android:layout_width="10dp"
                        android:layout_height="100dp"
                        android:textColor="@color/black"
                        android:visibility="gone"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/MgrTenantContract"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/important_button_shape"
                        android:text="계약일"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/main_button_background"
                        android:clickable="false"
                        />

                    <TextView
                        android:id="@+id/ContractDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ContractDate"
                        android:textColor="@color/black"
                        android:layout_marginRight="10dp"
                        android:textSize="20sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp"
                    >
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/MgrTenantLeave"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/important_button_shape"
                        android:text="만료일"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/main_button_background"
                        android:clickable="false"
                        />

                    <TextView
                        android:id="@+id/LeaveDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/LeaveDate"
                        android:textColor="@color/black"
                        android:layout_marginRight="10dp"
                        android:textSize="20sp" />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/tenantTitle"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="@string/roomNumber"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:gravity="center"
                    />

            </LinearLayout>

        </LinearLayout>
