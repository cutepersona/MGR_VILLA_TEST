                app:layout_constraintTop_toBottomOf="@+id/shimmerNotice"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="30sp"
                android:background="@drawable/shimmer_shape"
                />

