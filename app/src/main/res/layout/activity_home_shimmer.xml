                app:layout_constraintTop_toBottomOf="@+id/shimmerRoadAddress"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="30sp"
                android:background="@drawable/shimmer_shape"
                />

            <View
                android:id="@+id/shimmerTenant"
                android:layout_width="250dp"
                android:layout_height="25dp"
                android:layout_marginTop="80dp"
                app:layout_constraintTop_toBottomOf="@+id/shimmerAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="30sp"
                android:background="@drawable/shimmer_shape"
                />

            <View
                android:id="@+id/shimmerNotice"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toBottomOf="@+id/shimmerTenant"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="30sp"
                android:background="@drawable/shimmer_shape"
                />

            <View
