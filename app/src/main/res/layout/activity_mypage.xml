<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/MyPageToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_button_background"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/abc_vector_test">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/toolbar_hg_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.15" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/toolbar_hg_90"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.85" />

                <TextView
                    android:id="@+id/toolBarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/myInfoTitle"
                    android:textColor="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="50dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/MyNameArea"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_layout"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <!--        <de.hdodenhof.circleimageview.CircleImageView-->
        <!--            android:id="@+id/MyInfoImage"-->
        <!--            android:layout_width="60dp"-->
        <!--            android:layout_height="80dp"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            android:layout_marginLeft="10dp"-->
        <!--            android:src="@drawable/ic_myinfo_image"-->
        <!--            android:backgroundTint="@color/main_button_background"-->
        <!--            app:layout_constraintEnd_toStartOf="@+id/InfoUserName"-->
        <!--            app:layout_constraintTop_toTopOf="parent"-->
        <!--            app:layout_constraintBottom_toBottomOf="parent"-->
        <!--            android:clickable="false"-->
        <!--            />-->

        <ImageView
            android:id="@+id/MyImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_myinfo_image"
            android:background="@drawable/ic_myinfo_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/MyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/MyImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="name"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:clickable="false"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <TextView
        android:id="@+id/MyInfoText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/MyNameArea"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:background="#BCBCBC"
        android:text="@string/myIdInfo"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/MyInfoArea"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MyInfoText"
        android:background="?attr/selectableItemBackground"
        android:clickable="false"
        >


    <TextView
        android:id="@+id/MyPageIdText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:text="@string/ID"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:clickable="false"
        />

        <TextView
            android:id="@+id/MyPageUserEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/MyPageIdText"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/ID"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_margin="20dp"
            android:clickable="false"
            />

        <View
            android:id="@+id/MyPageUserEmailBottomLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@+id/MyPageUserEmail"
            android:background="@drawable/background_underline" />

        <TextView
            android:id="@+id/MyPagePhoneText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/MyPageUserEmailBottomLine"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:text="@string/user_phone"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:clickable="false"
            />

        <TextView
            android:id="@+id/MyPageUserPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/MyPagePhoneText"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/user_phone"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_margin="20dp"
            android:clickable="false"
            />

        <View
            android:id="@+id/MyPageUserPhoneBottomLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@+id/MyPageUserPhone"
            android:background="@drawable/background_underline" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/MyPageDeleteUser"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/MyPageUserPhoneBottomLine"
            android:background="@drawable/delete_button_shape"
            android:layout_marginTop="50dp"
            android:text="@string/signOut"
            android:textSize="15sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



<!--    <View-->
<!--        android:id="@+id/MyInfoPrivacyBottomLine"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1dp"-->
<!--        android:layout_marginLeft="5dp"-->
<!--        android:layout_marginRight="5dp"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/MyInfoArea"-->
<!--        android:background="@drawable/background_underline" />-->

    <Button
        android:id="@+id/MyPageChangePassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/main_button_background"
        android:text="@string/changePW"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/MyPageChangePhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/main_button_background"
        android:text="@string/changePhoneNumber"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/MyPageChangePassword"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>

</layout>