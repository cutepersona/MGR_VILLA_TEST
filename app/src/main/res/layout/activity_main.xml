<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">





    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/MainLogoLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/main_background"
        app:layout_constraintBottom_toTopOf="@+id/ButtonLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="2">




        <ImageView
            android:id="@+id/MainText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:src="@drawable/wrv"
            android:layout_margin="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ButtonLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/main_background"
        app:layout_constraintBottom_toTopOf="@+id/LoginCaseLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MainLogoLayout"
        app:layout_constraintVertical_weight="2">

        <Button
            android:id="@+id/Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/main_button_background"
            android:text="@string/login_email"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/searchId"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/searchId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:text="@string/searchID"
            android:textColor="@color/main_button_background"
            app:layout_constraintEnd_toStartOf="@+id/searchPw"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="@+id/Login"
            app:layout_constraintTop_toBottomOf="@+id/Login"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/gradient"
            app:layout_constraintBottom_toBottomOf="@+id/searchId"
            app:layout_constraintEnd_toStartOf="@+id/searchPw"
            app:layout_constraintStart_toEndOf="@+id/searchId"
            app:layout_constraintTop_toTopOf="@+id/searchId" />

        <Button
            android:id="@+id/searchPw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/transparent"
            android:text="@string/searchPW"
            android:textColor="@color/main_button_background"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/searchId"
            app:layout_constraintTop_toBottomOf="@+id/Login"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/gradient"
            app:layout_constraintBottom_toBottomOf="@+id/searchPw"
            app:layout_constraintEnd_toStartOf="@+id/signUp"
            app:layout_constraintStart_toEndOf="@+id/searchPw"
            app:layout_constraintTop_toTopOf="@+id/searchPw" />

        <Button
            android:id="@+id/signUp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:text="@string/signUp"
            android:textColor="@color/main_button_background"
            app:layout_constraintEnd_toEndOf="@+id/Login"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/searchPw"
            app:layout_constraintTop_toBottomOf="@+id/Login"
            tools:ignore="HardcodedText" />

