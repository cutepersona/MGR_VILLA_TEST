<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    >

    <NumberPicker
        android:id="@+id/CostTenantYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/CostTenantMonth"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/CostTenstYearText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="년"
        android:textStyle="bold"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/CostTenantYear"
        app:layout_constraintTop_toTopOf="@+id/CostTenantYear"
        app:layout_constraintBottom_toBottomOf="@+id/CostTenantYear"
        android:layout_marginLeft="10dp"
        />

    <NumberPicker
        android:id="@+id/CostTenantMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/CostTenantYear"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/CostTenstMonthText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="월"
        android:textStyle="bold"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/CostTenantMonth"
        app:layout_constraintTop_toTopOf="@+id/CostTenantMonth"
        app:layout_constraintBottom_toBottomOf="@+id/CostTenantMonth"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id="@+id/CostTenantCancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/del_button_background"
        android:text="취소"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CostTenantYear"
        app:layout_constraintEnd_toStartOf="@+id/CostTenantOkButton"
        />

    <Button
        android:id="@+id/CostTenantOkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/del_button_background"
        android:text="확인"
        app:layout_constraintStart_toEndOf="@+id/CostTenantCancelButton"
        app:layout_constraintTop_toBottomOf="@+id/CostTenantYear"
        app:layout_constraintEnd_toEndOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>