<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/MgrCostToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/main_button_background"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/abc_vector_test">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/toolbar_hg_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.15" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/toolbar_hg_90"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.85" />

                    <TextView
                        android:id="@+id/toolBarTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mgrCostForRoom"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginRight="50dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/signInputArea"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_layout">

            <ScrollView
                android:id="@+id/signUpScrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fillViewport="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/NoticeWUArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/CostUid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/CostYearMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mgrCostYearMonth"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="25dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/CostRoomNumber"
                         />

                    <ImageView
                        android:id="@+id/CostCalendar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@+id/CostYearMonth"
                        android:src="@drawable/ic_calendar_month"
                        app:layout_constraintTop_toTopOf="@+id/CostYearMonth"
                        app:layout_constraintBottom_toBottomOf="@+id/CostYearMonth"
                        android:layout_marginLeft="6dp"
                        />

                    <TextView
                        android:id="@+id/CostRoomNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/roomNumber"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/CostCalendar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/CostCalendar"
                        app:layout_constraintBottom_toBottomOf="@+id/CostCalendar"
                        android:textSize="30dp"
                        />

                    <TextView
                        android:id="@+id/TotalCostText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/TotalRoomCost"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="30dp"
                        app:layout_constraintTop_toBottomOf="@+id/CostRoomNumber"
                        app:layout_constraintEnd_toStartOf="@+id/TotalCostValue"
                        />

                    <TextView
                        android:id="@+id/TotalCostValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/TotalRoomCost"
                        android:textStyle="bold"
                        android:textSize="40sp"
                        android:textColor="#F44336"
                        app:layout_constraintTop_toTopOf="@+id/TotalCostText"
                        app:layout_constraintBottom_toBottomOf="@+id/TotalCostText"
                        app:layout_constraintStart_toEndOf="@+id/TotalCostText"
                        app:layout_constraintEnd_toEndOf="parent"

                        />

                    <TextView
                        android:id="@+id/CostBankName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/selectBank"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginLeft="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/TotalCostValue"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="40dp"
                        />

                    <TextView
                        android:id="@+id/CostAccountHolder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/AccountHolder"
                        android:textSize="25sp"
                        app:layout_constraintTop_toBottomOf="@+id/CostBankName"
                        app:layout_constraintStart_toStartOf="@+id/CostBankName"
                        />

                    <TextView
                        android:id="@+id/CostAccountNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/AccountNumber"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        app:layout_constraintTop_toBottomOf="@+id/CostAccountHolder"
                        app:layout_constraintStart_toStartOf="@+id/CostAccountHolder"
                        />


                    <TextView
                        android:id="@+id/WaterCostText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/waterCost"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:layout_marginLeft="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/CostAccountNumber"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="40dp"
                        />


                    <EditText
                        android:id="@+id/WriteWaterTon"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        app:layout_constraintStart_toEndOf="@+id/WaterCostText"
                        app:layout_constraintTop_toTopOf="@+id/WaterCostText"
                        app:layout_constraintBottom_toBottomOf="@+id/WaterCostText"
                        app:layout_constraintTop_toBottomOf="@+id/TotalCostValue"
                        android:layout_marginLeft="30dp"
                        />

                    <TextView
                        android:id="@+id/multiply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintStart_toEndOf="@+id/WriteWaterTon"
                        app:layout_constraintTop_toTopOf="@+id/WriteWaterTon"
                        app:layout_constraintBottom_toBottomOf="@+id/WriteWaterTon"
                        />

                    <TextView
                        android:id="@+id/ConstTonCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tonCost"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        app:layout_constraintStart_toEndOf="@+id/multiply"
                        app:layout_constraintTop_toTopOf="@+id/multiply"
                        android:textSize="25sp"
                        app:layout_constraintBottom_toBottomOf="@+id/multiply"
                        />

                    <TextView
                        android:id="@+id/equal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="="
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/WriteWaterTon"
                        app:layout_constraintStart_toStartOf="@+id/WriteWaterTon"
                        />

                    <TextView
                        android:id="@+id/waterCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/waterCost"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        app:layout_constraintStart_toEndOf="@+id/equal"
                        app:layout_constraintTop_toTopOf="@+id/equal"
                        android:textSize="25sp"
                        app:layout_constraintBottom_toBottomOf="@+id/equal"
                        />

                    <TextView
                        android:id="@+id/cleanCostText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cleanCost"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/WaterCostText"
                        app:layout_constraintTop_toBottomOf="@+id/waterCost"
                        android:textSize="25sp"
                        android:layout_marginTop="25dp"
                        />


                    <TextView
                        android:id="@+id/ConstCleanCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cleanCost"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/cleanCostText"
                        app:layout_constraintTop_toBottomOf="@+id/waterCost"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="25sp"
                        android:layout_marginTop="25dp"
                        />

                    <TextView
                        android:id="@+id/usunCostText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/usunCost"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/cleanCostText"
                        app:layout_constraintTop_toBottomOf="@+id/cleanCostText"
                        android:textSize="25sp"
                        android:layout_marginTop="25dp"
                        />


                    <TextView
                        android:id="@+id/ConstUsunCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/usunCost"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/usunCostText"
                        app:layout_constraintTop_toBottomOf="@+id/ConstCleanCost"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="25sp"
                        android:layout_marginTop="25dp"
                        />

                    <TextView
                        android:id="@+id/mgrCostText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mgrCost"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/usunCostText"
                        app:layout_constraintTop_toBottomOf="@+id/usunCostText"
                        android:textSize="25sp"
                        android:layout_marginTop="25dp"
                        />


                    <TextView
                        android:id="@+id/ConstMgrCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mgrCost"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/mgrCostText"
                        app:layout_constraintTop_toBottomOf="@+id/ConstUsunCost"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="25sp"
                        android:layout_marginTop="25dp"
                        />


                    <View
                        android:id="@+id/CostEmptyArea"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:layout_constraintTop_toBottomOf="@+id/ConstMgrCost"
                        />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </ScrollView>

            <Button
                android:id="@+id/WriteRoomCostButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/main_button_background"
                android:text="@string/noticeWrite"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>